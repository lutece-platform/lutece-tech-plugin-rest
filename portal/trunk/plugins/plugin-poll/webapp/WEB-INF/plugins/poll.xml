<?xml version="1.0" encoding="ISO-8859-1"?>


<plug-in>

    <!-- Plugin Informations -->
    <name>poll</name>
    <class>fr.paris.lutece.portal.service.plugin.PluginDefaultImplementation</class>
    <version>2.0</version>
    <description>Module de sondages</description>
    <documentation></documentation>
    <installation></installation>
    <changes></changes>
    <user-guide></user-guide>
    <provider>Mairie de Paris</provider>
    <provider-url>http://lutece.paris.fr</provider-url>
    <icon-url>images/admin/skin/plugins/poll/poll.png</icon-url>
    <copyright>Copyright 2001-2005 Mairie de Paris</copyright>
    <db-pool-required>1</db-pool-required>

    <!-- Xpage configuration -->
    <!-- Applications -->

    <applications>
        <application>
            <application-id>poll</application-id>
            <application-class>fr.paris.lutece.plugins.poll.web.PollApp</application-class>
        </application>
    </applications>

    <!-- RBAC Resources -->
    <rbac-resource-types>
        <rbac-resource-type>
            <rbac-resource-type-class>fr.paris.lutece.plugins.poll.service.PollResourceIdService</rbac-resource-type-class>
        </rbac-resource-type>
    </rbac-resource-types>


    <!-- Administration interface parameters -->
    <admin-features>
        <admin-feature>
            <feature-id>POLL_MANAGEMENT</feature-id>
            <feature-title>poll.adminFeature.poll_management.name</feature-title>
            <feature-description>poll.adminFeature.poll_management.description</feature-description>
            <feature-level>2</feature-level>
            <feature-url>jsp/admin/plugins/poll/ManagePolls.jsp</feature-url>
        </admin-feature>
    </admin-features>

</plug-in>
