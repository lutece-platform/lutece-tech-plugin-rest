<?xml version="1.0" encoding="ISO-8859-1"?>

<plug-in>
    
    <!-- Plugin Informations -->
    <name>childpages</name>
    <class>fr.paris.lutece.portal.service.plugin.PluginDefaultImplementation</class>
    <version>2.0</version>
    <documentation></documentation>
    <installation></installation>
    <changes></changes>
    <user-guide></user-guide>
    <description>Module de gestion de la rubrique Liens vers les pages filles</description>
    <provider>Mairie de Paris</provider>
    <provider-url>http://lutece.paris.fr</provider-url>
    <icon-url>images/admin/skin/plugins/childpages/childpages.png</icon-url>
    <copyright>Copyright 2001-2006 Mairie de Paris</copyright>
    <db-pool-required>0</db-pool-required>
    

  <!-- Portlet parameters -->
    <portlets>
        <portlet>
            <portlet-class>fr.paris.lutece.plugins.childpages.business.portlet.ChildPagesPortletHome</portlet-class>
            <portlet-type-id>CHILDPAGES_PORTLET</portlet-type-id>
            <portlet-type-name>childpages.portlet.name</portlet-type-name>
            <portlet-creation-url>plugins/childpages/CreatePortletChildPages.jsp</portlet-creation-url>
            <portlet-update-url>plugins/childpages/ModifyPortletChildPages.jsp</portlet-update-url>
            <portlet-create-action-url>plugins/childpages/DoCreatePortletChildPages.jsp</portlet-create-action-url>
            <portlet-modify-action-url>plugins/childpages/DoModifyPortletChildPages.jsp</portlet-modify-action-url>
            <!-- optional entries -->
            <portlet-create-script-template>/admin/portlet/script_create_portlet.html</portlet-create-script-template>
            <portlet-modify-script-template>/admin/portlet/script_modify_portlet.html</portlet-modify-script-template>
            <portlet-create-specific-template>/admin/plugins/childpages/value_id_parent.html</portlet-create-specific-template>
            <portlet-modify-specific-template>/admin/plugins/childpages/value_id_parent.html</portlet-modify-specific-template>
            <portlet-create-specific-form-template></portlet-create-specific-form-template>
            <portlet-modify-specific-form-template></portlet-modify-specific-form-template>
        </portlet>
    </portlets>
    
 </plug-in>


