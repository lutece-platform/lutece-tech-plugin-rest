<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
  
  <bean id="myLutecePortletDAO"  class="fr.paris.lutece.plugins.mylutece.business.portlet.MyLutecePortletDAO" />  

	<!--  expose MyLutece Authentication service (can be modified to use RMI or HTTPInvoker -->
	<bean id="myLuteceAuthenticationService" class="fr.paris.lutece.plugins.mylutece.service.MyLuteceAuthenticationServiceImpl" />

	<bean class="org.springframework.remoting.rmi.RmiServiceExporter">
		<!-- does not necessarily have to be the same name as the bean to be exported -->
		<property name="serviceName" value="MyLuteceAuthenticationService"/>
		<property name="service" ref="myLuteceAuthenticationService"/>
		<property name="serviceInterface" value="org.acegisecurity.providers.AuthenticationProvider"/>
		<!-- defaults to 1099 -->
		<property name="registryPort" value="1099"/>
	</bean>
</beans>